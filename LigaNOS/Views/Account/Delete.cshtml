@model LigaNOS.Data.Entities.User

<h2>Delete User</h2>

<div>
    <h4>User Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
    </dl>
</div>

<form asp-controller="Account" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <p>Are you sure you want to delete this user?</p>
        <button type="submit" value="Confirm Delete" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
        <a asp-action="UserList" asp-controller="Account" class="btn btn-secondary"><i class="fa fa-chevron-left"></i> Back</a>
    </div>
</form>
