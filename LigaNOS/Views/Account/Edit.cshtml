@model EditUserViewModel

<h1 class="page-title-style">Edit</h1>

<h4>User</h4>
<hr />
<div class="container">
    <div class="col-md-4 form-position">
        @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.UserId)


            <div class="form-group">
                @Html.LabelFor(model => model.Username)
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control input-size input-color" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-warning" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-size input-color" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-warning" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FirstName)
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control input-size input-color" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-warning" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName)
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control input-size input-color" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-warning" })
            </div>

            @*<div class="form-group">
                @Html.LabelFor(model => model.ProfileImage, new { @class = "control-label" })
                <input type="file" id="ProfileImage" name="ProfileImage" class="form-control-file" accept="image/*">
            </div>*@

            <div class="form-group">
                <label for="ProfileImage">Upload Player Image</label>
                <ejs-uploader id="ProfileImage" autoUpload="false"></ejs-uploader>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="UserList" class="btn btn-success">Cancel</a>
            </div>
        }
    </div>
</div>
