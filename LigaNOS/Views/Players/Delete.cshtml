@model LigaNOS.Data.Entities.Player

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<div>
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Age)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Position)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Position)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.TeamName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.TeamName)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImageFullPath)" alt="Picture" style="width: 300px; height: 450px; max-width: 100%; height: auto ">
        </div>
    </div>

    <div>
        <p>Are you sure you want to delete the user '@Model.Name'?</p>
        <form asp-controller="Account" asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Confirm Delete</button>
        </form>
    </div>
</div>
