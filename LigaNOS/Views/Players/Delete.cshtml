@model LigaNOS.Data.Entities.Player

@{
    ViewData["Title"] = "Delete";
}

<h1 class="page-title-style">Delete</h1>

<h4>Player</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <dl class="row page-info-color">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Age)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Position)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Position)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TeamName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TeamName)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImageFullPath)" alt="Picture" class="img-fluid" style="max-width: 100%;">
        </div>
    </div>
</div>
<div style="height: 120px; overflow-y: auto;">
    <p>Are you sure you want to delete the user '@Model.Name'?</p>
    <form asp-controller="Account" asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Confirm</button>
    </form>
</div>



