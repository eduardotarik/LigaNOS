<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Age" class="control-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Position" class="control-label">Position</label>
    <select asp-for="Position" asp-items="ViewBag.Positions" class="form-control">
        <option value="">Select a position</option>
    </select>
    <span asp-validation-for="Position" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TeamName" class="control-label">Team Name</label>
    <select asp-for="TeamName" asp-items="ViewBag.Teams" class="form-control">
        <option value="">Select a team</option>
    </select>
</div>