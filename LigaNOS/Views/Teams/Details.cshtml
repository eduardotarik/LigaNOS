@model LigaNOS.Data.Entities.Team

@{
    ViewData["Title"] = "Details";
}

<h1 class="page-title-style">Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <div>
        <div class="col-md-8">
            <dl class="row page-info-color general-dl">
                <dt class="col-sm-2 general-dt">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10 general-dd">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2 general-dt">
                    @Html.DisplayNameFor(model => model.Founded)
                </dt>
                <dd class="col-sm-10 general-dd">
                    @Html.DisplayFor(model => model.Founded)
                </dd>
                <dt class="col-sm-2 general-dt">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-10 general-dd">
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt class="col-sm-2 general-dt">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10 general-dd">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2 general-dt">
                    @Html.DisplayNameFor(model => model.Stadium)
                </dt>
                <dd class="col-sm-10 general-dd">
                    @Html.DisplayFor(model => model.Stadium)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImageFullPath)" alt="Picture" style="width: 300px; height: 300px; max-width: 100%; border-radius: 50%;" />
        </div>
    </div>
</div>


<div>
    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-pos"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
    }
    <a asp-action="Index" class="btn btn-success btn-pos"><i class="fa fa-chevron-left"></i> Back</a>
</div>
